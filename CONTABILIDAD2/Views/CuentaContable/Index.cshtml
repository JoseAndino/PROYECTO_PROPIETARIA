@model IEnumerable<CONTABILIDAD2.cuenta_contable>

@{
    ViewBag.Title = "Cuentas contables";
}

<h2>Cuentas Contables</h2>

<p>
    @Html.ActionLink("Create New", "Create"," ", new { @class = "btn btn-info" })
</p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.permite_transaccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nivel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cuenta_mayor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.balance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tipo_cuenta.descripcion)
                </th>

                <th>
                    Opciones
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.permite_transaccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nivel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cuenta_mayor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.balance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tipo_cuenta.descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

    </table>
